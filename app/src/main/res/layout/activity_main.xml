<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="25dp"
    tools:context=".LocationActivity">

    <EditText
        android:id="@+id/enterLocation"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="54dp"
        android:hint="Enter Location" />

    <Button
        android:id="@+id/back"
        android:layout_width="114dp"
        android:layout_height="62dp"
        android:layout_above="@+id/enterLocation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="-37dp"
        android:background="@android:color/transparent"
        android:text="Back"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:textStyle="bold"
        android:layout_height="34dp"
        android:layout_below="@+id/enterLocation"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="0dp"

        android:text="Enter the city or state above" />

    <Button
        android:id="@+id/currentlocation"
        android:layout_width="213dp"
        android:textStyle="bold"
        android:layout_height="54dp"
        android:background="@android:color/secondary_text_dark"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="35dp"
        android:text="Click to get the current location" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
        android:layout_width="0dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/text_view2"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="420dp">

        <TextView
            android:id="@+id/text_view3"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/text_view4"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/currentlocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-351dp"
        android:textSize="20dp" />


</RelativeLayout>