<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference

android:title="@string/app_name"
android:icon="@drawable/ic_cloud_circle_black_24dp"/>

    <ListPreference
        android:key="@string/pref_temperature"
        android:title="@string/pref_temperature"
        android:summary="@string/pref_units"
        android:defaultValue="false" />

    <ListPreference

        android:key="@string/pref_location"
        android:title="@string/pref_location"
        android:defaultValue="@string/pref_location"
        />

    <ListPreference

        android:dependency="@string/pref_temperature"
        android:key="@string/pref_verbosity"
        android:title="@string/pref_verbosity"
        android:dialogTitle="@string/pref_verbosity"
        android:defaultValue="@string/pref_verbosity"/>




    <PreferenceScreen

         android:key="button_voicemail_category_key"
         android:title="@string/fahrenheit"
         android:persistent="false">
    <ListPreference

        android:key="button_voicemail_provider_key"
        android:title="@string/celsius"/>
    <PreferenceScreen

        android:key="button_voicemail_setup_key"
        android:title="@string/units"
        android:persistent="false">
    </PreferenceScreen>

</PreferenceScreen>

</PreferenceScreen>